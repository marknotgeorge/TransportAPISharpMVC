@{
    ViewData["Title"] = "TransportAPISharp MVC sample";
}

<div class="row">
    <div class="col-md-12">
        <div class="jumbotron">
            <h1>TransportApiSharp MVC Sample</h1>
            <h4>A sample site to showcase <a href="https://github.com/marknotgeorge/TransportApiSharp" target="_blank">TransportApiSharp</a>, my client .Net class library for the <a href="http://www.transportapi.com/" target="_blank">TransportAPI</a> UK public transport API.</h4>
        </div>
        <div class="row">
            <p>Search a location (UK only) to find the nearest bus stops.</p>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-8">
                <div class="input-group">
                    <input id="locationSearch" class="form-control" placeholder="Search location..." />
                    <span class="input-group-btn">
                        <button class="btn btn-default"><span class="fa fa-search"></span> Search</button>
                    </span>
                </div>
            </div>
            <div class="col-md-2">
                <button class="btn btn-success"><span class="fa fa-crosshairs"></span> Use current location</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div id="transportMap" style='width: 100%; height: 400px;'></div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        function GetMap() {
            var map = new Microsoft.Maps.Map(document.getElementById('transportMap'), {
                credentials: '@ViewData["BingMapsAPIKey"]'
                });
        }
    </script>
}